{
  "manifest_version": 3,
  "name": "Uswift",
  "version": "1.0",
  "description": "Auto-apply to job boards using saved profiles.",
  "action": { "default_popup": "index.html" },
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

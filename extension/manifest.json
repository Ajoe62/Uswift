{
  "manifest_version": 3,
  "name": "Uswift",
  "version": "1.0",
  "description": "Auto-apply to job boards using saved profiles.",
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage", "activeTab", "scripting", "identity", "tabs"],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://*.supabase.co/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://*.myworkday.com/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.smartrecruiters.com/*",
    "https://*.icims.com/*",
    "https://*.bamboohr.com/*",
    "https://*.jobvite.com/*",
    "https://*.taleo.net/*",
    "https://*.ultipro.com/*",
    "https://*.successfactors.com/*",
    "https://*.sapsf.com/*",
    "https://*.oracle.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
